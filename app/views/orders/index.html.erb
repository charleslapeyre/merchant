<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>

      <h1>Orders</h1>

      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Total</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.name %></td>
              <td><%= link_to 'show', order_path(order) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>

